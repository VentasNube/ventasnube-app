<div class="modal-dialog modal-xl" role="document">
    {{#with ws_lang_data }}
    <div class="modal-content">
            <div class="modal-header">
                <div class="modal-nav">
                    <span class="back-arrow btn-previus">
                        <span class="material-icons">arrow_back</span>
                    </span>
                    <span class="modal-title">
                       Crear comprobante electronico Afip
                    </span>
                </div>
            </div>
            <div id="modal-body" class="">
                <div id="step-1" class="modal-body text-left col-sm-12 col-md-12 col-xs-12" style="
    background-image: url('/public/app/v4.0/dist/img/tuto/welcome_box_ventasnube.svg')!important;
    background-repeat: no-repeat!important;
    background-size: 230px 230px!important;
    background-position: 94% 15% !important;">
                    <div class="text-left">
                        <!--h2 class="margin-20"></h2-->
                        <h3 class="margin-20">Ingresa los datos para hacer el documento fiscal</h3>
                        <div class="margin-l-30">
                            <form id="invoice-form">
                                <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <label for="docType"><strong>Tipo de Documento</strong></label>
                                    <input type="text" class="form-control" id="docType" name="docType"
                                        placeholder="Tipo de Documento">
                                </div>
                                <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <label for="docNumber"><strong>Número de Documento</strong></label>
                                    <input type="text" class="form-control" id="docNumber" name="docNumber"
                                        placeholder="Número de Documento">
                                </div>
                                <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <label for="taxType"><strong>Tipo de Impuesto</strong></label>
                                    <select class="form-control" id="taxType" name="taxType">
                                        <option value="">Selecciona un tipo de impuesto</option>
                                    </select>
                                </div>
                                <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <label for="totalAmount"><strong>Monto Total</strong></label>
                                    <input type="text" class="form-control" id="totalAmount" name="totalAmount"
                                        placeholder="Monto Total">
                                </div>
                                <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <button type="button" class="btn btn-primary" onclick="generarFactura()">Generar
                                        Factura</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!--div class="modal-footer col-sm-12 col-md-12 col-xs-12">
                    <button id="btn-previus" type="button" step="1" class="btn-previus btn btn-default"
                        data-dismiss="modal" aria-label="Close">
                        <span class="">{{b_cancelar}}</span>
                    </button>
                    <button onclick="btn_next_new_board(this)" disabled="" id="btn-next" step="1" type="button"
                        class="btn btn-primary ">
                        <span class="">{{b_next}}</span>
                    </button>
                </div-->
      
    </div>
    {{/with}}
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
    fetchTaxTypes();

    function fetchTaxTypes() {
        fetch('/afip/getTaxTypes')
            .then(response => response.json())
            .then(data => {
                const taxTypeSelect = document.getElementById('taxType');
                data.forEach(taxType => {
                    const option = document.createElement('option');
                    option.value = taxType.Id; // Asumiendo que 'Id' es la clave del tipo de impuesto
                    option.textContent = taxType.Desc; // Asumiendo que 'Desc' es la descripción del tipo de impuesto
                    taxTypeSelect.appendChild(option);
                });
            })
            .catch(error => {
                console.error('Error fetching tax types:', error);
            });
    }
});

function generarFactura() {
    const form = document.getElementById('invoice-form');
    const formData = new FormData(form);

    fetch('/invoicing/generateInvoice', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.error) {
            alert('Error: ' + data.error);
        } else {
            alert('Factura generada con éxito: ' + JSON.stringify(data));
        }
    })
    .catch(error => {
        console.error('Error:', error);
    });
}
</script>
