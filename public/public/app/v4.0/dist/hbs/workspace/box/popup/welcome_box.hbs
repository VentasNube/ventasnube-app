<link href="/public/app/v4.0/plugins/iCheck/square/blue.css" rel="stylesheet">
<script src="/public/app/v4.0/plugins/iCheck/icheck.min.js"></script>
<script>
    $('[data-toggle="tooltip"]').tooltip()
    $("#new-board-step-1").hide();
    $("#board-type-radio-4").hide();
    $("#board-type-radio-5").hide();
    $("#board-type-icon").hide();
    $("#step-2").hide();
    $("#step-3").hide();
    // ICHECK NEW COMPATIBLE CON LOS SWICH PARA Q NO LOS ANULE
    $('.radio-chek').iCheck({
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'iradio_square-blue',
        handle: '',
        increaseArea: '20%' // optional
    });
    $('input[type="radio"]').iCheck({
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'iradio_square-blue',
        increaseArea: '20%' // Ajusta el área de clic para ser más grande que el propio elemento
    });
    // FIN ICHECK NEW COMPATIBLE CON LOS SWICH PARA Q NO LOS ANULE

    // NEW 2023
    $('input:radio[name=board-type]').on('ifChecked', function (event) {
        var select = $(this);
        var id = select.attr('id');
        $("#new-board-detail-1").show();
        var board_type = select.val();
        var board_icon = select.attr('icon');
        var board_bg = select.attr('bg-color');
        var board_name = select.attr('module_type');
        $("#board-type-icon").show();
        $("#new-board-step-1").show();
        $(".new_board_name").html(board_name);
        $("#bt-text-icon").attr('icon', board_icon).children('.material-icons:first').text(board_icon);
        $("#bg-select-color").children('.material-icons:first').text(board_icon).attr('bg-color', board_bg);
        $("#bg-select-color").removeClass().addClass('btn ' + board_bg + ' line');
        $("#bg-select-text").html(board_name);
        $("#btn-next").removeAttr('disabled');

    }).on('ifUnchecked', function (event) {
        $("#btn-next").attr('disabled', 'disabled');
    });


    $(".board-icon").click(function () {
        var bgColor = $(this).attr('board-icon');
        var bgText = $(this).html();
        var icon = $(this).children(':first').text();
        $("#bt-text-icon").html(bgText);
        $("#bt-text-icon").removeClass();
        $("#bt-text-icon").addClass('btn round  ' + bgColor + ' line');
        $("#bt-text-icon").addClass('btn round  ' + bgColor + ' line');
        $("#bt-text-icon").attr('icon', icon);
        $("#input-select-icon").val(bgColor);
        $("#bg-select-color").children('.material-icons:first').text(icon);
    });
    $(".board-type").click(function () {
        var bgColor = $(this).attr('board-type');
        var bgText = $(this).html();
        var icon = $(this).children('.material-icons:first').text();
        $("#bt-select-type").html(bgText);
        $("#bg-select-icon").html(icon);
        $("#bg-select-color").children('.material-icons:first').text(icon);
        $("#bt-select-type").removeClass();
        $("#bt-select-type").addClass('btn ' + bgColor + ' line');
        $("#bt-select-type").val(bgColor);
        if (bgColor == "btn-primary") {
            $("#new-board-step-objects").show();
            $("#new-board-step-patients").hide();
        } else {
            $("#new-board-step-patients").show();
            $("#new-board-step-objects").hide();
        }
    });
    $(".board-type-2").click(function () {
        var bgColor = $(this).attr('board-type');
        var bgText = $(this).html();
        var icon = $(this).children(':first').text();
        $("#bt-select-type-2").html(bgText);
        $("#bg-select-icon").html(icon);

        $("#bg-select-color").children('.material-icons:first').text(icon);

        $("#bt-select-type-2").removeClass();
        $("#bt-select-type-2").addClass('btn ' + bgColor + ' line');
        $("#bt-select-type-2").val(bgColor);

        if (bgColor == "btn-primary") {
            $("#new-board-step-objects").show();
            $("#new-board-step-patients").hide();
        } else {
            $("#new-board-step-patients").show();
            $("#new-board-step-objects").hide();
        }
    });
    $("li.bg-color").click(function () {
        var bgColor = $(this).attr('bg-color');
        $("#bg-select-color").removeClass();
        $("#bg-select-color").addClass('btn ' + bgColor + ' line');
        $("#bg-select").val(bgColor);
        $("#bg-select-color").attr('bg-color', bgColor);
    })
        .mouseout(function () {
            $("span", this).first().text("panorama_fish_eye");
            // $("p", this).last().text(++i);
        })
        .mouseover(function () {
            $("span", this).first().text("check_circle");
        });
    $(".item-select").click(function () {
        var bgColor = $(this).attr('item-select');
        var bgText = $(this).html();
        $("#btn-select-3").html(bgText);
        $("#btn-select-3").removeClass();
        $("#btn-select-3").addClass('btn ' + bgColor + ' line');
        $("#bg-select-lis").attr(bgColor);

        // $("#input-select-3").val(bgColor);    
    });
    $('#switch-9').click(function () {
        // Si esta seleccionado (si la propiedad checked es igual a true)
        if ($(this).prop('checked')) {
            $('input:radio[name=board_delivery_place]').iCheck('enable');
        } else {
            // Deselecciona cada input que tenga la clase .checar
            $('input:radio[name=board_delivery_place]').iCheck('uncheck');
            $('input:radio[name=board_delivery_place]').iCheck('disable');
        }
    });
    $('#switch-16').click(function () {
        // Si esta seleccionado (si la propiedad checked es igual a true)
        if ($(this).prop('checked')) {
            $('input:radio[name=board_control_stock]').iCheck('enable');
        } else {
            // Deselecciona cada input que tenga la clase .checar
            $('input:radio[name=board_control_stock]').iCheck('uncheck');
            $('input:radio[name=board_control_stock]').iCheck('disable');
        }
    });
    $('#switch-18').click(function () {
        // Si esta seleccionado (si la propiedad checked es igual a true)
        if ($(this).prop('checked')) {
            $('input:radio[name=board_control_cash_close_box]').iCheck('enable');
        } else {
            // Deselecciona cada input que tenga la clase .checar
            $('input:radio[name=board_control_cash_close_box]').iCheck('uncheck');
            $('input:radio[name=board_control_cash_close_box]').iCheck('disable');
        }
    });
    $('#switch-19').click(function () {
        // Si esta seleccionado (si la propiedad checked es igual a true)
        if ($(this).prop('checked')) {
            $('input.control_cash').iCheck('enable');
        } else {
            // Deselecciona cada input que tenga la clase .checar
            $('input.control_cash').iCheck('uncheck');
            $('input.control_cash').iCheck('disable');
        }
    });
    $(".btn-previus").click(function () {
        var step = $("#btn-previus").attr('step');
        if (step == 1) {
            $("#btn-next").text('Siguiente');
            $("#btn-previus").text('Cancelar');
            $(".btn-previus").attr('data-dismiss', 'modal');
            $(".btn-previus").attr('aria-label', 'Close');
        }
        else if (step == 2) {
            $("#btn-previus").attr('step', '1');
            $("#btn-previus").text('Volver');
            $("#step-1").show();
            $("#step-2").hide();
        }
        else if (step == 3) {
            $("#btn-next").text('Continuar');
            $("#btn-previus").attr('step', '2');
            $("#step-2").show();
            $("#step-3").hide();
        }
    });


</script>