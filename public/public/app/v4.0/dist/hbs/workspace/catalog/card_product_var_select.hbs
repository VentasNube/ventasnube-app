<!--- INICIO DE RENDER BODY CARD --->
{{#with item }}


<form id="cat_card_var_id_{{{../_id}}}" variant_id="{{{../variant_id}}}" class="card-product card_product_form"
    product_id="{{{../_id}}}">
    <!--input type="checkbox" id="card-visitors-indicator" /-->
    <div class="header">
        <!-- Indicadr -->
                        <p class="cat">
                            {{#each ../tags }}
                            <span class="s-card-cat pull-left">#{{this}}</span>
                            {{/each}}
                        </p>
                    {{#first pictures}}
                        <a href="#" onclick="catalog_view_item(this)" variant_id="{{{../../variant_id}}}"   class="img_card view_item" product_id="{{{../../_id}}}">
                            <img class="card_img_url"    src="{{{max}}}" alt="200x200">
                        </a>
                    {{/first }}
        <div onclick="catalog_view_item(this)" variant_id="{{{../../variant_id}}}"  id="variations_set_{{{../_id}}}" class=" indicator one"  product_id="{{{../_id}}}">
            <div class="open_detail" width="18" height="27">
                <span class=" material-icons">create</span>
                <span class="quantity">9999</span>
            </div>
        </div>


        <div class="card_product_details">
            {{#first price_list}}
            <div>
                <span class=" material-icons">monetization_on</span>
                <input name="card_prduct_val" class="card_product_val form-control" type="number" placeholder="valor"
                    value="{{value}}">
            </div>
            {{/first }}
            <div>
                <span class=" material-icons">local_offer</span>
                <input name="card_prduct_discount" class="card_product_discount form-control" type="number"
                    placeholder="Descuento" value="0">
            </div>
            <div>
                <span class=" material-icons">superscript</span>
                <input name="card_prduct_quantity" class="card_product_quantity form-control" type="number"
                    placeholder="Cantidad" value="1">
            </div>

            <div class="card_product_footer">
                <button onclick="variations_add_fav(this)" product_id="{{{../_id}}}" variant_id="{{{../variant_id}}}"  class="danger round m margin-r-10">
                    <i class="material-icons">favorite</i>
                </button>
                <button onclick="variations_add_cart(this)" product_id="{{{../_id}}}" variant_id="{{{../variant_id}}}"  type="submit"
                    class="success round m btn_submit margin-0">
                    <span class="material-icons">add_shopping_cart</span>
                </button>
            </div>

        </div>
        <div class="content ripple_div ripple_efect_close "> </div>
        <div class="ripple-efect-div success"></div>
    </div>
</form>
<div class="info">
    <p class="card_product_name">{{../name}} </p>
</div>

<div class="footer">
    <div class="text-left">
        <div class="btn-group dropright">
            <button id="var_btn_{{{../_id}}}" variant_id="{{../variant_id}}" onclick="cat_variations_get(this)"
                product_id="{{{../_id}}}" type="button" data-toggle="dropdown" aria-expanded="true">
                <span id="bg-select-color" class="btn btn-default">
                    {{#first pictures}}
                        <img src="{{{max}}}" class="img-card-mini s round">
                    {{/first }}
                    {{#each attribute_combinations as | ac |}}
                    <!-- Hago la comprobacion de si es un color -->
                        {{#ifEquals id 'SIZE' }}
                            <div class="round-icon pr" data-toggle="tooltip" data-placement="bottom" title="{{{id_name}}}"
                                data-original-title="{{{id_name}}}">
                                <span class="var_name"> {{value}} </span>
                            </div>
                        {{/ifEquals}}
                        {{#ifDiff id 'COLOR' }}
                                <span class="var_name" id="bg-select-text"> {{name}}</span>
                                {{name}}
                        {{/ifDiff}}
                    {{/each}}

                    <span class="material-icons">arrow_drop_down</span>
                </span>
            </button>
            <ul class="card-loader dropdown-menu mini ">
                <div id="cat_variant_{{{../_id}}}">
                    <div class="spinner-box">
                        <div class="three-quarter-spinner primary"></div>
                    </div>
                </div>
            </ul>
        </div>

        <div class="btn-group dropright">
            <button type="button" class="" data-toggle="dropdown" aria-haspopup="true"
                aria-expanded="false">
                <span id="bg-select-color " class="card_item_selected_price btn btn-transparent">
                    {{#first ../price_list}}
                    <div class="round-icon pr"><span> {{currency.value}} </span></div>
                    {{/first}}
                    {{#first price_list}}
                    <label class="counter">{{value}}</label>
                    {{/first}}
                    <span class="material-icons">arrow_drop_down</span>
                </span>
            </button>
            <ul class="dropdown-menu">
                <li class="header">Precios  </li>
                    {{#each price_list as | pl |}}
                                    <li>
                                        <a onclick="cat_variations_price(this)" class="" href="#">
                                        {{#each ../../price_list as | l1 |}}
                                                {{#ifEquals l1.id pl.id }}
                                                                    <div class="round-icon pr uper">
                                                                        {{value}}
                                                                    </div>
                                                                     <span>{{currency.value}}</span>
                                                {{/ifEquals}}
                                                  
                                        {{/each}}   
                                            <label class="counter">{{value}}</label>
                                        </a>
                                    </li>                
                    {{/each}}
                
            </ul>
        </div>
    </div>
</div>

{{/with}}
<!--- FIN DE RENDER BODY CARD --->