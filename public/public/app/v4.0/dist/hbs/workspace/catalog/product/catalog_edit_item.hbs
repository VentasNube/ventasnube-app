                                            <span class="material-icons">
                                                delete_forever
                                            </span>
                                        </button>

                                        <button data-toggle="tooltip" data-placement="bottom" title="Subir foto"
                                            data-original-title="Subir foto" type="button"
                                            class="margin-10 round btn btn-transparent btn-default pull-left ">
                                            <span class="material-icons">
                                                add_a_photo
                                            </span>
                                        </button>

                                        {{#first pictures}}
