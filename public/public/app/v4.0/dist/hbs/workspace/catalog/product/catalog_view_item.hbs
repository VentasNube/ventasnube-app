<!-- CATALOG VIEW PRODUCT TEMPLATE -->
<div class="righ_nav_header">
 <button type="button" class="left_nav_close right_nav_close margin-10 round btn btn-transparent btn-default pull-left ">
                <span class="material-icons">
                    arrow_back
                </span>
            </button>

{{#with product_doc}}
     <h3 class=" margin-0 padding-t-20">{{name}}</h3>
 {{/with}}

</div>
<div class="righ_nav_content">
    <div class="righ_nav_content_scroll">


    {{#with product_variant}}
    <div class="header">

        <button id="" type="button" class="round margin-10 left_nav_close btn btn-default right_nav_close pull-right ">
            <span class="material-icons">close</span>
        </button>

        <button data-toggle="tooltip" data-placement="bottom" title="Subir foto" data-original-title="Subir foto"
            type="button" class="margin-10 round btn btn-transparent btn-default pull-left ">
            <span class="material-icons">
                add_a_photo
            </span>
        </button>

        {{#first pictures}}
        <div style="width: 100%; background-image: url('{{{max}}}');" class="parallax img_card">
            <!--img class="card_img_url" src="{{{max}}}" alt="200x200"-->
            <div class=" mini-carrousel-img ">
                {{#each ../pictures }}
                <div class="mini-card-img-s">

                    <div class="img">
                        <a target="_blank" href="{{min}}">
                            <img src="{{min}}" alt="">
                        </a>
                    </div>

                </div>
                {{/each}}
            </div>
        </div>
        {{/first }}

    </div>
    {{/with}}



    {{#with product_doc}}
    <h1 class="margin-t-0">{{name}}</h1>
    <h4>
        {{#ifEquals status 'active' }}
        <span class="s-card-cat pull-left">
            <span class="material-icons text-s lh-n"> highlight_off</span>
            Inactivo</span>
        {{/ifEquals}}
        {{#ifEquals status 'inactive' }}
        <span class="s-card-cat pull-left bg-primary">
            <span class="material-icons text-s lh-n"> check_circle </span>
            Activo
        </span>
        {{/ifEquals}}
        <span class="s-card-cat pull-left ">{{condition}}</span>
        {{#each tags }}
        <span class="s-card-cat pull-left">#{{this}}</span>
        {{/each}}
    </h4>
    <br>
    <h3>Descripcion: {{descriptions}}</h3>
    <h3>
        {{#each attributes }}
        <div class="s-card-cat pull-left">{{name}}: {{value_name}} </div>
        {{/each}}
    </h3>
    </br>
    <h4 class="margin-10">
        <div class="btn-group dropright">
            <button type="button" class=" " data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <span id="bg-select-color" class="padding-0 card_item_selected_price btn btn-transparent">
                    <div class="round-icon pr">
                        <span class="material-icons">
                            history
                        </span>

                    </div>
                </span>
            </button>
            <ul class="dropdown-menu">
                <li class="header">Historial de Cambios</li>
                {{#each last_update_at }}
                <li>
                    <a href="#">
                        <span>{{username}}</span>
                        <label class="counter">{{datetime}}</label>
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>
        Variables
    </h4>
    {{/with}}
    {{#with product_variant}}

    <div class="margin-10 text-center">
        <div class="btn-group dropright">
            <button id="var_btn_{{{../product_doc/_id}}}" id="var_btn_{{{../product_doc/_id}}}"
                onclick="view_item_variations_get(this)" product_id="{{{../product_doc/_id}}}" variant_id="{{id}}"
                type="button" data-toggle="dropdown" aria-expanded="true">
                <span id="bg-select-color" class="btn btn-default">
                    {{#first pictures}}
                    <img src="{{{min}}}" class="var_img img-card-mini s round">

                    <!--span id="bg-select-color" class="material-icons">
                                            category
                                        </span-->
                    {{/first}}
                    {{#each attribute_combinations as | ac |}}
                    <!-- Hago la comprobacion de si es un color -->
                    {{#ifEquals id 'SIZE' }}
                    <div class="round-icon pr" data-toggle="tooltip" data-placement="bottom" title="{{{id_name}}}"
                        data-original-title="{{{id_name}}}">
                        <span> {{value}} </span>
                    </div>
                    {{/ifEquals}}
                    {{#ifDiff id 'COLOR' }}
                    {{name}}
                    {{/ifDiff}}
                    {{/each}}
                    <span class="material-icons">arrow_drop_down</span>
                </span>
            </button>
            <ul class="card-loader dropdown-menu mini ">
                <div product_id="{{{../_id}}}" variant_id="{{../variant_id}}"
                    id="view_item_variant_{{{../product_doc/_id}}}">
                    <div class="spinner-box">
                        <div class="three-quarter-spinner primary"></div>
                    </div>
                </div>
            </ul>
        </div>
        <span class="s-card-cat margin-10  text-m lh-n">
            <span class="material-icons text-m lh-n"> assignment </span>
            Stock: {{#stock stock_invetary}}{{/stock}}
        </span>
    </div>
    <div class="s-card-activ-footer ">
        <div class="panel-body">
            {{#each price_list as | pl |}}
            <div class="row ">
                <h4 class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left">
                    <a onclick="variations_price(this)" class="" href="#">
                        {{#with ( lookup ../../price_list @index)}}
                        <div class="round-icon pr">
                            {{value}}
                        </div>
                        {{value}}
                        {{/with}}
                    </a>
                </h4>
                <h4 class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right">
                    {{#first ../../price_list}}
                    <div class="round-icon pr"><span> {{currency.value}} </span></div>
                    {{/first}}
                    <span iid="total_neto_prod"> {{value}}</span>
                </h4>
            </div>
            {{/each}}
        </div>
    </div>
{{/with}}   

   </div>
</div>
{{#userCtx 'catalog' 'edit'}}
<div >
    <div class="righ_nav_footer_main">
        {{#with ../product_variant}}
        <button onclick="catalog_edit_item(this)" product_id="{{{../../product_doc/_id}}}" variant_id="{{id}}"
            type="button" class="cobrar-btn btn btn-primary btn-full-with">
            <span class="material-icons">create</span>
              {{#with ../ws_lang_data}} {{m_catalog_edit_tittle}}{{/with}}
        </button>
        {{/with}}
    </div>
</div>
{{/userCtx}}

