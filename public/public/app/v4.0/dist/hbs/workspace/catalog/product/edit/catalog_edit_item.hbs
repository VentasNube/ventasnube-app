    <div class="righ_nav_content">
        <div class="righ_nav_content_scroll">

   
        {{#with product_doc}}
        <div class="panel-group " role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="edit-item-description">
                    <div class="row">
                        <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                            <a role="button" data-toggle="collapse" data-parent="#accordion"
                                href="#edit-item-description-body" aria-expanded="false" aria-controls="collapseOne"
                                class="collapsed">
                                <input doc_id="{{_id}}" input_id="name" onfocusout="cat_edit_product(this)"
                                    value="{{name}}" class="form-control" type="text" data-toggle="tooltip"
                                    data-placement="bottom" title="" data-original-title="{{name}}">
                            </a>
                        </div>

                        <div class="padding-5 margin-t-10 col-xs-3 col-sm-3 col-md-3 col-lg-3">
                            <div class="btn-group dropleft">
                                <button id="" type="button"
                                    class="round padding-0  margin-5 dropdown-toggle dropdown-toggle-split btn btn-default pull-right "
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="material-icons">more_vert</span>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a onclick="catalog_product_delete(this)" doc_id="{{{../product_doc/_id}}}"
                                            variant_id="{{id}}" href="#">
                                            <span class="material-icons">
                                                delete
                                            </span> <span>Eliminar</span>

                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="Switch" onclick="">
                                <input id="{{{../product_doc/_id}}}_{{id}}_status_checkbox" name="switch_variation"
                                    {{#ifEquals status.status true }} checked {{/ifEquals}} value="" type="checkbox"
                                    doc_id="{{{../product_doc/_id}}}" variant_id="{{id}}" input_id="status"
                                    onclick="cat_edit_chekbox(this)" />
                                <label for="{{{../product_doc/_id}}}_{{id}}_status_checkbox"
                                    class="label-primary"></label>
                            </div>


                        </div>
                    </div>
                </div>
                <div id="edit-item-description-body" class="panel-collapse collapse out" role="tabpanel"
                    aria-labelledby="edit-item-description" aria-expanded="true" style="height: 0px;">
                    <div class="panel-body">
                        <div class="row">
                            <!--- TAGS MAIN -->
                            <div class="padding-0 margin-t-12 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="chips_main">
                                    <span class="icon material-icons" data-toggle="tooltip" data-placement="bottom"
                                        title=""
                                        data-original-title="{{#with ../ws_lang_data}} {{{m_catalog_edit_tags}}} {{/with}}">
                                        tag
                                    </span>
                                    <div class="chips_items_main">
                                        {{#each tags }}
                                        <div class="chips_item s-card-cat pull-left" val_text="{{this}}">
                                            <a doc_id="{{../_id}}" new_tag="{{this}}" input_id="tags" href="#"
                                                onclick="dell_tag(this)">
                                                <span class="button material-icons text-s lh-n"> highlight_off</span>
                                            </a>
                                            <label class="chips_text">
                                                {{this}}
                                            </label>
                                        </div>
                                        {{/each}}
                                    </div>
                                    <input doc_id="{{_id}}" input_id="tags" class="chips_input form-control"
                                        name="keywords" type="text" onkeypress="add_new_tag_press(event,this)" style="">
                                </div>
                            </div>
                            <!--- Categorias  -->
                            <div class="padding-0 margin-t-12 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="padding-0 col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                    <div class="input-group flex">
                                        <span class="input-group-addon">
                                            <div class="btn-group dropright">

                                                <button id="" type="button"
                                                    class=" margin-5 dropdown-toggle dropdown-toggle-split btn btn-default pull-right "
                                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <span class="material-icons" data-toggle="tooltip"
                                                        data-placement="bottom"
                                                        data-original-title="{{#with ../ws_lang_data}} {{{m_catalog_edit_category}}} {{/with}}">
                                                        category
                                                    </span>

                                                    <span id="catalog_select_cat_tittle"> {{category.value}} <span>
                                                </button>

                                                <ul class="dropdown-menu m">
                                                    <!--ul class="dropdown-menu m pull-right"></ul-->
                                                    <li class="header">
                                                        <span class="material-icons" data-toggle="tooltip"
                                                            data-placement="bottom"
                                                            data-original-title="{{#with ../ws_lang_data}} {{{m_catalog_edit_category}}} {{/with}}">
                                                            category
                                                        </span>
                                                        {{#with ../ws_lang_data}} {{{m_catalog_edit_category}}}
                                                        {{/with}}
                                                        <span class="material-icons">arrow_right</span>
                                                        <span id="catalog_select_cat_value">{{category.value}}</span>
                                                    </li>
                                                    <li>
                                                        <div>
                                                            <input doc_id="{{_id }}" input_id="catalog_cat_input"
                                                                id="catalog_new_cat_input" class="form-control"
                                                                onkeypress="catalog_search_cat(event,this)" type="text"
                                                                placeholder="{{#with ../ws_lang_data}} {{{m_catalog_edit_add}}} {{{m_catalog_edit_new}}} {{{m_catalog_edit_category}}} {{/with}} ">

                                                        </div>
                                                    </li>
                                                    <div id="catalog_select_new_cat_list">
                                                        {{#each ../category_list/category_list }}
                                                        <li item_value_id="{{id}}" item_value="{{value}}"
                                                            item_id="category">
                                                            <div class="dropdown-item">
                                                                <a href="#" new_value="{{value}}"
                                                                    onclick='catalog_product_edit_category(this)'
                                                                    input_value="{{category.id}}" input_id="category"
                                                                    doc_id="{{../_id }}" value="{{value}}">
                                                                    {{value}}
                                                                </a>
                                                                <button>
                                                                    <span doc_id="" value="{{value}}"
                                                                        class="material-icons"
                                                                        onclick='catalog_dell_cat(this)'>delete</span>
                                                                </button>
                                                            </div>
                                                        </li>
                                                        {{/each}}
                                                    </div>
                                                </ul>

                                            </div>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="padding-0 margin-t-12 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <!--- MARCAS  -->
                                <div class="input-group flex">
                                    <span class="input-group-addon">
                                        <div class="btn-group dropright">

                                            <button id="" type="button"
                                                class=" margin-5 dropdown-toggle dropdown-toggle-split btn btn-default pull-right "
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <span class="material-icons" data-toggle="tooltip"
                                                    data-placement="bottom"
                                                    data-original-title="{{#with ../ws_lang_data}} {{{m_catalog_edit_trade}}} {{/with}}">
                                                    grid_view
                                                </span>

                                                <span id="catalog_select_trade_tittle"> {{trade.value}} <span>
                                            </button>

                                            <ul class="dropdown-menu m">
                                                <!--ul class="dropdown-menu m pull-right"></ul-->
                                                <li class="header">
                                                    <span class="material-icons" data-toggle="tooltip"
                                                        data-placement="bottom"
                                                        data-original-title="{{#with ../ws_lang_data}} {{{m_catalog_edit_trade}}} {{/with}}">
                                                        grid_view
                                                    </span>
                                                    {{#with ../ws_lang_data}} {{{m_catalog_edit_trade}}} {{/with}}
                                                    <span class="material-icons">arrow_right</span>
                                                    <span id="catalog_select_trade_value">{{trade.value}}</span>
                                                </li>

                                                <li>
                                                    <div>
                                                        <input doc_id="{{_id }}" id="catalog_new_trade_input"
                                                            onkeypress="catalog_search_new_pro_trade(event,this)"
                                                            input_id="catalog_trade_input" class="form-control"
                                                            type="text"
                                                            placeholder="{{#with ../ws_lang_data}} {{{m_catalog_edit_add}}} {{{m_catalog_edit_new}}} {{{m_catalog_edit_category}}} {{/with}} ">

                                                    </div>
                                                </li>
                                                <div id="catalog_select_new_trade_list">
                                                    {{#each ../trade_list/trade_list }}
                                                    <li onclick='catalog_select_new_trade(this)' item_value_id="{{id}}"
                                                        item_value="{{value}}" item_id="trade">
                                                        <div class="dropdown-item">
                                                            <a new_value="{{value}}"
                                                                onclick='catalog_product_edit_trade(this)'
                                                                input_value="{{value}}" input_id="trade" href="#"
                                                                doc_id="{{../_id }}" value="{{value}}">
                                                                {{value}}
                                                            </a>
                                                            {{#userCtx 'catalog' 'admin'}}
                                                            <button>
                                                                <span doc_id="" value="{{value}}" class="material-icons"
                                                                    onclick='catalog_dell_trade(this)'>delete</span>
                                                            </button>
                                                            {{/userCtx }}

                                                        </div>
                                                    </li>
                                                    {{/each}}
                                                </div>
                                            </ul>

                                        </div>
                                    </span>
                                </div>
                                <!--- MODELO  -->
                                <div class="input-group flex">
                                    <span class="input-group-addon">
                                        <div class="btn-group dropright">
                                            <button id="" type="button"
                                                class=" margin-5 dropdown-toggle dropdown-toggle-split btn btn-default pull-right "
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <span class="material-icons" data-toggle="tooltip"
                                                    data-placement="bottom"
                                                    data-original-title="{{#with ../ws_lang_data}} {{{m_catalog_edit_model}}} {{/with}}">
                                                    flip_to_front
                                                </span>
                                                <span id="catalog_select_model_tittle">{{model.value}}<span>
                                            </button>
                                            <ul class="dropdown-menu m">
                                                <li class="header">
                                                    <span class="material-icons" data-toggle="tooltip"
                                                        data-placement="bottom"
                                                        data-original-title="{{#with ../ws_lang_data}} {{{m_catalog_edit_model}}} {{/with}}">
                                                        flip_to_front
                                                    </span>
                                                    {{#with ../ws_lang_data}} {{{m_catalog_edit_model}}} {{/with}}
                                                    <span class="material-icons">arrow_right</span>
                                                    <span id="catalog_select_model_value">{{model.value}}</span>
                                                </li>
                                                <li>
                                                    <div>
                                                        <input doc_id="{{_id }}" id="catalog_new_model_input"
                                                            input_id="catalog_model_input"
                                                            onkeypress="catalog_search_new_pro_model(event,this)"
                                                            class="form-control" type="text"
                                                            placeholder="{{#with ../ws_lang_data}} {{{m_catalog_edit_add}}} {{{m_catalog_edit_new}}} {{{m_catalog_edit_model}}} {{/with}} ">

                                                    </div>
                                                </li>
                                                <div id="catalog_select_new_model_list">
                                                    {{#each ../model_list/model_list }}
                                                    <li onclick='catalog_select_new_model(this)' item_value_id="{{id}}"
                                                        item_value="{{value}}" item_id="model">
                                                        <div class="dropdown-item">
                                                            <a new_value="{{value}}"
                                                                onclick='catalog_product_edit_model(this)'
                                                                input_value="{{value}}" input_id="model" href="#"
                                                                doc_id="{{../_id }}" value="{{value}}">
                                                                {{value}}
                                                            </a>
                                                            {{#userCtx 'catalog' 'admin'}}
                                                            <button>
                                                                <span doc_id="" value="{{value}}" class="material-icons"
                                                                    onclick='catalog_dell_model(this)'>delete</span>
                                                            </button>
                                                            {{/userCtx }}

                                                        </div>
                                                    </li>
                                                    {{/each}}
                                                </div>


                                            </ul>
                                        </div>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--- NOMBRE CATEGORIAS -->
        {{/with}}
        {{#with ws_lang_data}} <h3> {{{m_catalog_edit_variant}}} </h3>{{/with}}
        <!--- MAIN VARIACIONES imprimo el catalog_new_variaton -->
        <div id="edit_variations_main" class="margin-0 padding-0">

        </div>
             </div>
    </div>
