<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.13/css/intlTelInput.css">
{{#with ws_lang_data }}
<div class="modal-dialog modal-xs" role="document">
    <div class="modal-content">
        <form id="new_mov_form" class="">
            <div class="modal-header">
                <div class="modal-nav">
                        <span class="modal-title">
                            {{#each ../ws_left_nav_data.m_t}} 
                                {{#ifEquals m_t_url  ../../order_doc.category_id}}
                                    <small class="material-icons lg">{{m_t_icon}}</small>
                                   {{#with ../../ws_lang_data}}{{m_board_pay}}{{/with}}
                                    {{m_t_name}}
                                {{/ifEquals}}
                            {{/each}}
                        </span>

                    <span class="back-arrow btn-previus pull-right">
                        <small>
                            <span class="xl btn-more btn btn-default">
                                <span class="material-icons">qr_code</span>
                                {{../order_doc.order_id}}
                            </span>
                        </small>
                        <button id="" data-dismiss="modal" aria-label="Close" type="button"
                            class=" btn btn-default text round xs">
                            <span class="material-icons">close</span>
                        </button>
                    </span>
                </div>
            </div>
             <div id="modal-body" class="">
                <div class="modal-body padding-0 text-left col-sm-12 col-md-12 col-xs-12">
                        <div id="new_pay_order_tot" class="text-center  margin-t-10 form-group col-lg-6 col-md-6 col-sm-6 col-xs-6">
                             <label>
                                <strong style="font-size: 25px; font-style: normal;" >
                                    {{box_incoming_receive_value}}
                                 </strong>
                               </label>
                            <strong style="font-size: 40px; font-style: normal;" >
                                    {{#with ../currency_default}}{{value}}{{/with}}
                            <span>  {{#with ../order_doc}}{{total}}{{/with}}</span>
                            </strong>
                        </div>

                        <div class="padding-t-20 form-group text-center col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="btn-group">
                                <button type="button" id="type-mov-payment-btn" class="btn xl btn-more btn-primary line dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <span id="type-mov-payment-icon" class="material-icons">
                                        account_balance_wallet
                                    </span>
                                    <span id="type-mov-payment-text" data-text="" class="hidden-xs hidden-sm">
                                        Medio de pago
                                    </span>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li role="separator" class="divider"></li>
                                    {{#each ../payment_type_list as | pl |}}
                                    <li><a onclick="add_new_mov_select_type_payment(this)" data-value="{{id}}" href="#"
                                            data-icon="{{icon}}" data-text="{{name}}"><i
                                                class="material-icons">{{icon}}</i>{{name}}</a></li>
                                    {{/each}}
                                    <li role="separator" class="divider"></li>
                                </ul>
                            </div>
                        </div>

                        <div id="new_pay_order_input" style="display: none;" class=" text-center form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <label>
                                 <strong style="font-size: 16px; font-style: normal;" >
                                        {{box_incoming_receive_value}}
                                 </strong>
                              </label>
                            
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="maxi" aria-hidden="true">
                                        <strong style="font-size: 30px; font-style: normal;">
                                        {{#with ../currency_default}}{{value}}{{/with}}
                                        </strong>
                                    </i>
                                </div>
                                <input  id="new_pay_mov_value"  class="form-control maxi money round-r" placeholder="{{#with ../order_doc}}{{total}}{{/with}}" type="number"value="" name="valor">
                            </div>
                        </div>
                </div>
            </div>
    </div>

    <div class="modal-footer col-sm-12 col-md-12 col-xs-12">
        <!--button type="button" class="btn-previus btn btn-default" data-dismiss="modal" aria-label="Close">
            <span class="">{{b_cancel}}</span>
        </button-->
       
        {{#with ../order_doc}}
                <button id="new_oreder_pay_btn" disabled=""  doc_id="{{_id}}" order_id="{{order_id}}" onclick="new_order_pay(this)" category_id="{{category_id}}"
                    type="button" class="margin-top cobrar-btn btn btn-primary btn-full-with">
                    <span class="material-icons">monetization_on</span>
                    {{#with ../../ws_lang_data}}{{m_board_pay}}{{/with}}
                </button>
        {{/with}}

    </div>
    </form>
</div>
{{/with}}
