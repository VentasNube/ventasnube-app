<script>

    function add_new_mov_select_type(element) {
        
        // Obtener el icono y el texto de la opci贸n seleccionada
        var icon = element.getAttribute('data-icon');
        var text = element.getAttribute('data-text');
        var value = element.getAttribute('data-value');

        // Actualizar el contenido del bot贸n
        document.getElementById('type-mov-btn-icon').textContent = icon;
        document.getElementById('type-mov-btn-text').textContent = text;
        document.getElementById('type-mov-btn-text').textContent = text;
        document.getElementById('type-mov-btn').setAttribute('data-type-mov', value);


    }


    function add_new_mov_select_type_payment(element) {
        // Obtener el icono y el texto de la opci贸n seleccionada
        var icon = element.getAttribute('data-icon');
        var text = element.getAttribute('data-text');
         var value = element.getAttribute('data-value');
        // Actualizar el contenido del bot贸n
        document.getElementById('type-mov-payment-icon').textContent = icon;
        document.getElementById('type-mov-payment-text').textContent = text;

        document.getElementById('type-mov-payment-btn').setAttribute('data-type-payment', value);

        document.getElementById('type-mov-payment-btn').setAttribute('data-text', text);
         document.getElementById('type-mov-payment-btn').setAttribute('data-icon', icon);
    
        document.getElementById('new_mov_description').focus();
        // document.getElementById('new_mov_value').focus();


    }

</script>